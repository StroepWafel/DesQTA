{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DesQTA",
  "version": "1.0.0-2",
  "identifier": "com.desqta.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "DesQTA",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 700,
        "decorations": false,
        "center": true,
        "visible": true,
        "transparent": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' http://ipc.localhost http://tauri.localhost blob:http://tauri.localhost https://*.seqta.com https://*.seqta.com.au https://*.betterseqta.com https://*.betterseqta.org https://api.github.com https://github.com; media-src 'self' data:;"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/1024x1024.png"
    ],
    "publisher": "BetterSEQTA+"
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["desqta"]
      },
      "mobile": [
        {
          "scheme": ["seqtalearn"],
          "appLink": false
        }
      ]
    },
    "shell": {
      "open": true
    },
    "updater": {
      "active": true,
      "endpoints": ["https://raw.githubusercontent.com/BetterSEQTA/DesQTA/releases/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM5RkJCRjQzRkRCQzBCQTcKUldTbkM3ejlRNy83eWJCRFlPZG5INFRHRUFVUXRibnNXMXR6OVJja1dIbzJsNUloQ1NxMzZzM2EK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
