{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DesQTA",
  "version": "1.0.0-2",
  "identifier": "com.desqta.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "DesQTA",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 700,
        "decorations": false,
        "center": true,
        "visible": true,
        "transparent": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/1024x1024.png"
    ],

    "publisher": "BetterSEQTA+"
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["desqta"]
      }
    },
    "shell": {
      "open": true
    }
  }
}
